# Next.js Application Environment Variables
# Copy this file to .env.local and configure your values

# Django Backend Configuration
# Note: This should match the URL where your Django backend is running
NEXT_PUBLIC_BACKEND_API_URL=http://localhost:8000

# NextAuth.js Configuration
# Generate a random secret: openssl rand -base64 32
AUTH_SECRET=your-secret-key-here
NEXTAUTH_SECRET=your-secret-key-here

# Optional: NextAuth URL (usually auto-detected)
NEXTAUTH_URL=http://localhost:3000

# Development/Production Environment
NODE_ENV=development
